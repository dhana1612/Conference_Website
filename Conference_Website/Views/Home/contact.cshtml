@model ContactForm

<!--Title Name-->
@{
    ViewData["Title"] = "Contact us";
}

<!--Showing the Validation Error Message-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Background Image Section -->
<div id="intro-example" class="img-fluid " style=" height: 30vh; margin-top:80px; width: 100%; background-image: url('../Images/Photo22.jpg'); background-size: cover; background-position: center; ">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        
    </div>
</div>

<!--Get the response message from the backend and store the value-->
@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

<!--Contact Section-->
<section class="contact-our-area pb-3" id="contact">
    <div class="container pb-5 pt-4 text-black px-3">
        <div class="row">
            <!-- Heading -->
            <div class="col-12">
                <div class="mb-4 pt-5">
                    <div class="mb-4 fs-5">
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-@messageType">
                                @message
                            </div>
                        }
                    </div>
                    <h5 class="text-uppercase text-primary fs-3 fw-bold">Contact Us</h5>
                </div>
            </div>
        </div>

        <div class="row gy-4 justify-content-between">
            <!-- Contact Form -->
            <div class="col-12 col-md-7" id="contact-form">
                <div class="contact_form_area">
                    <form method="post" id="main_contact_form">
                        <div class="row gy-3 ">
                            <!-- First Name -->
                            <div class="col-12 col-md-6">
                                <input asp-for="FirstName" class="form-control fs-5 placeholder-white" name="FirstName" id="name" placeholder="Your Name *"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <!-- Last Name -->
                            <div class="col-12 col-md-6">
                                <input asp-for="LastName" class="form-control fs-5 placeholder-white" name="LastName" id="last_name" placeholder="Last Name *" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <!-- Email -->
                            <div class="col-12 col-md-6">
                                <input asp-for="Email" class="form-control fs-5 placeholder-white" name="Email" id="email" placeholder="E-mail *" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <!-- Phone Number -->
                            <div class="col-12 col-md-6">
                                <input asp-for="PhoneNumber" class="form-control fs-5 placeholder-white" name="PhoneNumber" id="subject" placeholder="Your Number *" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <!-- Message -->
                            <div class="col-12">
                                <textarea asp-for="Message" class="form-control fs-5 placeholder-white" id="message" placeholder="Your Message *" rows="3"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 text-start">
                                <div class=" mt-4">
                                    <button asp-controller="ContactForm" asp-action="ContactForm1" class="btn btn-primary fs-5 px-4 py-2 fw-bold">Send Message</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!--Contact Information -->
            <div class="col-12 col-md-4 px-3">
                <div class="contact-information">
                    <div class="mb-3">
                        <h5 class="mb-1 text-primary fs-5 fw-bold">Address:</h5>
                        <p class="fs-4">Avinashi Road, Neelambur, Coimbatore</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="mb-1 text-primary fs-5 fw-bold">Phone:</h5>
                        <p class="fs-4">+91 98422 62396</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="mb-1 text-primary fs-5 fw-bold">Email:</h5>
                        <p class="fs-4">icngcs25@psgitech.ac.in</p>
                    </div>
                    
                </div>
            </div>

        </div>


    </div>
</section>

