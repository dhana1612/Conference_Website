@model ContactForm
@{
    ViewData["Title"] = "Home";
}

@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

<!--Hero Section-->
<Hero id="home">
    <!-- Background Image Section -->
    <div id="intro-example" class="img-fluid" style=" background-image: url('../Images/Photo2.jpg'); background-size: cover; background-position: center;  height: 100vh;  width: 100%; ">
        <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
            <div class="text-white text-start px-3">
                <h1 class="mb-3 display-6">
                    International Conference on Computing, Networking
                    <br />
                    and Data Science
                </h1>
                <a class="btn btn-outline-light btn-lg m-2 startbutton" href="" role="button" rel="nofollow">
                    Let start
                </a>
            </div>
        </div>
    </div>
</Hero>

<!--About Section-->
<section class="about-us-countdown-area section-padding-100-0 pt-4 pb-2" id="about">
    <div class="container pt-5 pb-2">
        <h5 class="text-uppercase text-primary fs-3">About Conference</h5>

        <div class="row  mb-3 ">
            <!-- About Content -->
            <div class="col-lg-7 col-md-12">
                <div class="about-content-text mb-4 mt-4 about_us">
                    <h3 class="fs-3 text-info">Welcome to the Project Management</h3>
                    <p class="fs-4" style="text-indent: 55px; text-align: justify">
                        The International Conference on Computing, Networking, and Data Science (ICCNDS 2025) is a premier forum for researchers, academicians, industry professionals, and students to exchange ideas, share insights, and explore the latest advancements in the fields of computing, networking, and data science.
                    </p>
                    <p class="fs-4" style="text-indent: 55px; text-align: justify">
                        As digital transformation continues to reshape industries, the role of artificial intelligence, big data, cloud computing, and advanced networking has become more critical than ever. ICCNDS 2025 provides a unique platform to discuss emerging technologies, groundbreaking research, and industry trends that will shape the future of digital innovation.
                    </p>
                    <div class="text-start mt-4">
                        <button class="btn btn-primary px-4 py-2 fw-bold">Intrested</button>
                    </div>
                </div>
            </div>

            <!-- Image -->
            <div class="col-lg-5 col-md-12 d-flex justify-content-center mt-4 mt-lg-0">
                <img src="../Images/Photo1.png" alt="AI Image" class="img-fluid ">
            </div>
        </div>
    </div>
</section>

<!--Speaker Section-->
<section class="p-5" style="background-image: url('../Images/Photo14.jpg');" id="speaker">
    <div class="container p-2">
