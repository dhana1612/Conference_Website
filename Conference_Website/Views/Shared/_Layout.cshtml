<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Conference_Website.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>

    <!--Navbar Section-->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark w-100">
            <div class="container-fluid">
                <a class="navbar-brand text-white fs-5 ps-4" href="#">
                    <img src="~/Images/logo.png" alt="ICCNDS Logo" height="48" class="me-2">ICCNDS
                </a>
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav fs-5 align-items-center pe-5">
                        <li class="nav-item pe-4">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-action="Index" asp-controller="Home">Home</a>
                        </li>

                        <li class="nav-item dropdown pe-4">
                            <a class="nav-link dropdown-toggle text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "AboutUs" ? "active" : "")"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                About Us
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "About_the_conference" ? "active" : "")" asp-controller="AboutUs" asp-action="About_the_conference">About the Conference</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Scope_of_Conference" ? "active" : "")" asp-controller="AboutUs" asp-action="Scope_of_Conference">Scope of Conference</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Organizing_Committee" ? "active" : "")" asp-controller="AboutUs" asp-action="Organizing_Committee">Organizing Committee</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Editorial_Board" ? "active" : "")" asp-controller="AboutUs" asp-action="Editorial_Board">Editorial Board</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown pe-4">
                            <a class="nav-link dropdown-toggle text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Author_s_Desk" ? "active" : "")"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Author's Desk
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Journal_Publication" ? "active" : "")" asp-controller="Author_s_Desk" asp-action="Journal_Publication">Journal Publication</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Key_Dates" ? "active" : "")" asp-controller="Author_s_Desk" asp-action="Key_Dates">Key Dates</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "Registration_Details" ? "active" : "")" asp-controller="Author_s_Desk" asp-action="Registration_Details">Registration Details</a></li>
                                <li><a class="dropdown-item @(ViewContext.RouteData.Values["action"].ToString() == "New_Paper_Submissions" ? "active" : "")" asp-controller="Author_s_Desk" asp-action="New_Paper_Submissions">New Paper Submission</a></li>
                            </ul>
                        </li>

                        <li class="nav-item pe-4">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["action"].ToString() == "Speaker" ? "active" : "")" asp-action="Speaker" asp-controller="Home">Speakers</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")" asp-action="Contact" asp-controller="Home">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--Main Body-->
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--Footer Section-->
    <footer class="text-center text-lg-start text-white fs-5 pt-4" style="background-color: #929fba" id="Footerbg">
        <!-- Grid container -->
        <div class="container p-4 py-0">
            <!-- Section: Links -->
            <section class="">
                <!--Grid row-->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold fs-4">
                            Company name
                        </h6>
                        <p>
                            Here you can use rows and columns to organize your footer
                            content. Lorem ipsum dolor sit amet, consectetur adipisicing
                            elit.
                        </p>
                    </div>
                    <!-- Grid column -->

                    <hr class="w-100 clearfix d-md-none" />

                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold fs-4">Products</h6>
                         <p class="text-white">MDBootstrap</p>
                         <p class="text-white">MDWordPress</p>
                         <p class="text-white">BrandFlow</p>
                         <p class="text-white">Bootstrap Angular</p>
                        
                    </div>
                    <!-- Grid column -->

                    <hr class="w-100 clearfix d-md-none" />

                    <!-- Grid column -->
                    <hr class="w-100 clearfix d-md-none" />

                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold fs-4">Contact</h6>
                        <p><i class="fas fa-home mr-3"></i> 7th Main Cross Street ,Chennai</p>
                        <p><i class="fas fa-envelope mr-3"></i> dprsl@gmail.com</p>
                        <p><i class="fas fa-phone mr-3"></i> + 91 9554231589</p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold fs-4">Follow us</h6>

                        <!-- Facebook -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: #3b5998" href="#!" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>

                        <!-- Twitter -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: black" href="#!" role="button">
                            <i class="fa-brands fa-x-twitter" style="color: #ffffff;"></i>
                        </a>

                        <!-- Google -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: #dd4b39" href="#!" role="button">
                            <i class="fab fa-google"></i>
                        </a>

                        <!-- Linkedin -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="#!" role="button">
                             <i class="fab fa-linkedin-in"></i>
                        </a>

                        <!-- Github -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="#!" role="button">
                             <i class="fab fa-github"></i>
                        </a>

                        <!-- Instagram -->
                        <a class="btn btn-primary btn-floating m-1" style="background-color: #ac2bac" href="#!" role="button">
                            <i class="fab fa-instagram"></i>
                        </a>

                    </div>
                </div>
                <!--Grid row-->
            </section>
            <!-- Section: Links -->
        </div>

        <!-- Copyright -->
        <div class="text-center p-2 pt-4"
             style="background-color: rgba(0, 0, 0, 0.2)">
            © 2025 Copyright:
            <p class="text-white">
                International Conference on Computing, Networking and Data Science
            </p>
        </div>
        <!-- Copyright -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
