        <div class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <div class="card shadow-lg d-flex flex-column h-100">
                    <img src="Images/Person1 (1).jpg" class="card-img-top" alt="Hollywood Sign on The Hill" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">
                            Take part in specialized workshops led by experts, providing practical insights and strategies to enhance your skills. Engage with peers  
                        </p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-lg d-flex flex-column h-100">
                    <img src="Images/Person1 (2).jpg" class="card-img-top" alt="Palm Springs Road" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Take part in specialized workshops led by experts, providing practical insights and strategies to enhance your skills. Engage with peers during networking sessions designed to foster collaboration and professional growth</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-lg d-flex flex-column h-100">
                    <img src="Images/Person1 (3).jpg" class="card-img-top" alt="Los Angeles Skyscrapers" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">
                            This is a longer card with supporting text below as a natural lead-in to
                            additional content.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-lg d-flex flex-column h-100">
                    <img src="Images/Person1 (4).jpg" class="card-img-top" alt="Los Angeles Skyscrapers" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">
                            This is a longer card with supporting text below as a natural lead-in to
                            additional content.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a class="btn btn-primary px-4 py-2 fw-bold" asp-action="Speaker" asp-controller="Home">More</a>
        </div>
    </div>
</section>

<!--Contact Section-->
<section class="contact-our-area py-3" id="contact" style="background-image: url('../Images/Photo6.jpg'); background-size: cover; background-position: center;">
    <div class="container p-5">
        <div class="row">
            <!-- Heading -->
            <div class="col-12">
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert alert-@messageType">
                        @message
                    </div>
                }
                <div class="mb-4">
                    <p class="text-info fs-3 py-2" style="padding-left: 25%;">Any concerns?</p>
                    <h5 class="text-uppercase text-black fs-4 pb-4" style="padding-left: 25%;">Contact Us</h5>
                </div>
            </div>
        </div>

        <div class="row gy-4 justify-content-between mx-3">
            <!-- Contact Form -->
            <div class="col-12 col-md-7" id="contact-form">
                <div class="contact_form_area">
                    <form method="post" id="main_contact_form">
                        <div class="row gy-3 ">
                            <!-- First Name -->
                            <div class="col-12 col-md-6">
                                <input asp-for="FirstName" class="form-control text-white fs-5 placeholder-white" name="FirstName" id="name" placeholder="Your Name" />
                            </div>
                            <!-- Last Name -->
                            <div class="col-12 col-md-6">
                                <input asp-for="LastName" class="form-control text-white fs-5 placeholder-white" name="LastName" id="last_name" placeholder="Last Name" />
                            </div>
                            <!-- Email -->
                            <div class="col-12 col-md-6">
                                <input asp-for="Email" class="form-control text-white fs-5 placeholder-white" name="email" id="email" placeholder="E-mail" />
                            </div>
                            <!-- Phone Number -->
                            <div class="col-12 col-md-6">
                                <input asp-for="PhoneNumber" class="form-control text-white fs-5 placeholder-white" name="PhoneNumber" id="subject" placeholder="Your Number" />
                            </div>
                            <!-- Message -->
                            <div class="col-12">
                                <textarea asp-for="Message" class="form-control text-white fs-5 placeholder-white" id="message" placeholder="Your Message *" rows="4"></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 text-end">
                                <div class=" mt-4">
                                    <button asp-controller="ContactForm" asp-action="ContactForm" class="btn btn-primary px-4 py-2 fw-bold">Send Message</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
