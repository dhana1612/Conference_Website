<!--Title Name-->
@{
    ViewData["Title"] = "Key Dates";
}

<!-- Background Image Section -->
<div id="intro-example" class="img-fluid animated fadeIn"
     style="height: 30vh; margin-top:80px; width: 100%; background-image: url('../Images/Photo17.jpeg'); background-size: cover; background-position: center;">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <div class="text-white text-start px-3 animated slideInDown">
            <h2 class="fw-bold display-5 text-uppercase text-light">Key Dates</h2>
            <div class="divider mx-auto my-3"></div>
        </div>
    </div>
</div>

<!--Main section for KeyDate-->
<div class="container my-5 px-4 fs-4">
    <!-- Heading -->
    <h5 class="text-uppercase text-primary fs-3 pb-5 fw-bold">important Dates</h5>

    <!-- Row 1 -->
    <div class="row text-center text-white fw-bold align-items-center py-4 rounded shadow-lg mb-3" style="background-color: #0d6efd;">
        <div class="col-6 border-end border-white">Abstract Submission Deadline</div>
        <div class="col-6">February 3, 2025</div>
    </div>

    <!-- Row 2 -->
    <div class="row text-center text-dark fw-bold align-items-center py-4 rounded shadow-lg mb-3" style="background-color: #ffc107;">
        <div class="col-6 border-end border-dark">Full Paper Submission Deadline</div>
        <div class="col-6">April 30, 2025</div>
    </div>

    <!-- Row 3 -->
    <div class="row text-center text-white fw-bold align-items-center py-4 rounded shadow-lg mb-3" style="background-color: #0d6efd;">
        <div class="col-6 border-end border-white">Notification of Acceptance</div>
        <div class="col-6">June 16, 2025</div>
    </div>

    <!-- Row 4 -->
    <div class="row text-center text-dark fw-bold align-items-center py-4 rounded shadow-lg mb-3" style="background-color: #ffc107;">
        <div class="col-6 border-end border-dark">Final Paper Submission Deadline</div>
        <div class="col-6">June 30, 2025</div>
    </div>

    <!-- Row 5 -->
    <div class="row text-center text-white fw-bold align-items-center py-4 rounded shadow-lg mb-3" style="background-color: #0d6efd;">
        <div class="col-6 border-end border-dark">Conference Dates</div>
        <div class="col-6">July 21-22, 2025</div>
    </div>
</div>

<!--Venue section-->
<section class="container-fluid text-dark p-5" style="background-image: url('../Images/Photo23.jpg'); background-size: cover; background-position: center;">

    <div class="container p-5 rounded-3 box-shadow">
        <div class="row ">
            <!-- Where Section -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="d-flex flex-column align-items-center align-items-start">
                    <i class="fa-solid fa-map-marker-alt text-success fs-1 mb-3"></i>
                    <p class="display-5 fw-bold">Where</p>
                    <div class="border-bottom border-success border-3 w-25 mb-3"></div>
                    <p class="mt-2 fs-4 text-center">
                        PSG Institute of Technology and Applied Research<br>
                        Avinashi Road, Neelambur, Coimbatore,<br>
                        Tamilnadu
                    </p>
                </div>
            </div>
            <!-- When Section -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="d-flex flex-column align-items-center align-items-start">
                    <i class="fa-solid fa-calendar-alt text-success fs-1 mb-3"></i>
                    <p class="display-5 fw-bold">When</p>
                    <div class="border-bottom border-success border-3 w-25 mb-3"></div>
                    <p class="mt-2 fs-4 text-center">
                        23<sup>rd</sup> - 24<sup>th</sup> August, 2024
                    </p>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-action="Registration_Details" asp-controller="Author_s_Desk" class="btn bg-success text-light fs-4 btn-lg">Register Here</a>
        </div>
    </div>
</section>