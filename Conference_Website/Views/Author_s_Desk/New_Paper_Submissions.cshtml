@model NewPaperSubmission

<!--Showing the Validation Error Message-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!--Get the response message from the backend and store the value-->
@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

<!--Title name-->
@{
    ViewData["Title"] = "Paper Submission";
}

<!-- Background Image Section -->
<div id="intro-example" class="img-fluid" style=" height: 30vh; margin-top:70px; width: 100%; background-image: url('../Images/Photo17.jpeg'); background-size: cover; background-position: center; ">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <div class="text-white text-center px-3">
            <h2 class="fw-bold display-5 text-uppercase text-light">New Paper Submission</h2>
            <div class="divider mx-auto my-3"></div>
        </div>
    </div>
</div>

<!--Paper Submission Section-->
<div class="container my-5">

    <div class="mb-4 fs-5">
        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-@messageType">
                @message
            </div>
        }
    </div>

    <div class="row justify-content-center">
        <div class=" text-start px-3">
            <h2 class="fw-bold text-start display-7 text-uppercase text-primary">Paper Submission</h2>

        </div>
        <p class="newpapar pb-4 fs-4">
            Welcome to the paper submission portal. Please fill out the required details and upload your research paper for review.
            Ensure that all information provided is accurate to facilitate smooth processing.
        </p>
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #ffffff, #f8f9fa); border-radius: 16px;">
                <div class="card-body p-4 fs-5">
                    <form asp-controller="ContactForm" asp-action="NewPaperSubmission" method="post" enctype="multipart/form-data">
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Paper Title *</label>
                            <input asp-for="Papertitle" class="form-control border-primary shadow-sm fs-5" name="Papertitle">
                            <span asp-validation-for="Papertitle" class="text-danger"></span>
                        </div>
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Author Full Name *</label>
                            <input asp-for="AuthorFullName" class="form-control border-primary shadow-sm fs-5" name="AuthorFullName">
                            <span asp-validation-for="AuthorFullName" class="text-danger"></span>
                        </div>
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Author Mobile Number *</label>
                            <input asp-for="AuthorMobile" class="form-control border-primary shadow-sm fs-5" name="AuthorMobile">
                            <span asp-validation-for="AuthorMobile" class="text-danger"></span>
                        </div>
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Author Email Address *</label>
                            <input asp-for="AuthorEmail" class="form-control border-primary shadow-sm fs-5" name="AuthorEmail">
                            <span asp-validation-for="AuthorEmail" class="text-danger"></span>
                        </div>
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Author Institution Name *</label>
                            <input asp-for="AuthorInstitution" class="form-control border-primary shadow-sm fs-5" name="AuthorInstitution">
                            <span asp-validation-for="AuthorInstitution" class="text-danger"></span>
                        </div>
                        <div class="mb-4 fs-5">
                            <label class="form-label fw-bold">Author Category *</label>
                            <select asp-for="AuthorCategory" class="form-select border-primary shadow-sm fs-5" >
                                <option value="">-- Select Category --</option>
                                <option value="student">Student</option>
                                <option value="faculty">Faculty</option>
                                <option value="researcher">Researcher</option>
                                <option value="others">Others</option>
                            </select>
                            <span asp-validation-for="AuthorCategory" class="text-danger"></span>
                        </div>
                        <div class="mb-5 fs-5">
                            <label class="form-label fw-bold"> Upload Paper *</label>
                            <input asp-for="PaperFile" name="PaperFile" class="form-control border-primary shadow-sm fs-5" accept=".pdf,.doc,.docx">
                            <span asp-validation-for="PaperFile" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold btn-lg shadow"
                                    style="background: linear-gradient(135deg, #007bff, #0056b3); border-radius: 8px;">
                                <i class="bi bi-send"></i> Submit Paper
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Venue Section-->
<section class="container-fluid text-dark p-5" style="background-image: url('../Images/Photo23.jpg'); background-size: cover; background-position: center;">

    <div class="container p-5 rounded-3 box-shadow">
        <div class="row ">
            <!-- Where Section -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="d-flex flex-column align-items-center align-items-start">
                    <i class="fa-solid fa-map-marker-alt text-success fs-1 mb-3"></i>
                    <p class="display-5 fw-bold">Where</p>
                    <div class="border-bottom border-success border-3 w-25 mb-3"></div>
                    <p class="mt-2 fs-4 text-center">
                        ICDN Institute<br>
                        7th cross 4th street, DPRSL, Chennai,<br>
                        Tamilnadu
                    </p>
                </div>
            </div>
            <!-- When Section -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="d-flex flex-column align-items-center align-items-start">
                    <i class="fa-solid fa-calendar-alt text-success fs-1 mb-3"></i>
                    <p class="display-5 fw-bold">When</p>
                    <div class="border-bottom border-success border-3 w-25 mb-3"></div>
                    <p class="mt-2 fs-4 text-center">
                        23<sup>rd</sup> - 24<sup>th</sup> August, 2024
                    </p>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-action="Registration_Details" asp-controller="Author_s_Desk" class="btn bg-success text-light fs-4 btn-lg">Register Here</a>
        </div>
    </div>
</section>




